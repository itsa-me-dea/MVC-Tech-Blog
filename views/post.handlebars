<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <div class="card">
    <h4 class="card-header">Leave a Comment</h4>
    <form class="card-body new-comment-form" id="comment-form">
      <div class="form-group">
      <textarea class="form-input" id="post-comment" name="post-comment"></textarea>
      </div>
      <button class="btn btn-primary">Comment</button>
    </form>
  </div>

  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
        <p>
        {{comment.comment_text}}
      </p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/post.js"></script>